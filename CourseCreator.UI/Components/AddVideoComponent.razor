@inject NavigationManager NavMan
@inject VideoDataService VideoData 

<h4 class="m-2">Add Video</h4>

<EditForm Model="video" OnValidSubmit="CreateNewVideo">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group mx-2 my-3">
        <label class="h6 font-weight-bold">Title</label>
        <br />
        <InputText @bind-Value="video.Title" class="col-md-4 form-control" />
    </div>
    <div class="form-group mx-2 my-3">
        <label class="h6 font-weight-bold">Video Embed Url</label>
        <br />
        <InputText @bind-Value="video.VideoUrl" class="col-md-4 form-control" />
    </div>
    <div class="row mx-2 my-4">
        <button class="btn btn-outline-primary mr-1" @onclick="OnCancelClick">
            Cancel
        </button>
        <button class="btn btn-primary" type="submit">
            Add Video
        </button>
    </div>
</EditForm>

