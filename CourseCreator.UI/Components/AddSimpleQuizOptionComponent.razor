<EditForm Model="quizOption" OnValidSubmit="AddOption">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group mx-2 my-3">
        <label class="h6 font-weight-bold">Text</label>
        <br />
        <InputText @bind-Value="quizOption.Text" class="col-md-4 form-control" />
    </div>
    <div class="form-group m-2">
        <label class="h6 font-weight-bold">Correct Answer?</label>
        <InputCheckbox @bind-Value="quizOption.IsAnswer" />
    </div>
    <div class="row mx-2">
        <button class="btn btn-primary" type="submit">
            Add
        </button>
    </div>
</EditForm>

@code {
    private SimpleQuizOptionDisplayModel quizOption = new SimpleQuizOptionDisplayModel();

    [Parameter]
    public EventCallback<SimpleQuizOptionDisplayModel> OnAddOption { get; set; }

    private void AddOption()
    {
        OnAddOption.InvokeAsync(quizOption);
    }
}
