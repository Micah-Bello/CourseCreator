@page "/projects/add-new"
 
<h3 class="m2">Create New Project</h3>

<EditForm Model="project" OnValidSubmit="CreateNewProject">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="form-group mx-2 my-3">
        <label class="h6 font-weight-bold">Title</label>
        <br />
        <InputText @bind-Value="@project.Title" class="col-md-4 form-control" />
    </div>
    <div class="form-group m-2">
        <label class="h6 font-weight-bold">Description</label>
        <br />
        <InputText @bind-Value="@project.Description" class="col-md-4 form-control" />
    </div>
    
    <div class="row mx-2 my-4">
        <button class="btn btn-outline-primary mr-1" @onclick="OnCancelClick">
            Cancel
        </button>
        <button class="btn btn-primary" type="submit">
            Create Project
        </button>
    </div>
</EditForm>

